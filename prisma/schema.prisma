generator client {
  provider = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Supplier {
  id                String       @id
  externalId        String      @unique
  name              String
  address           String
  city              String
  country           String
  contactName       String
  phone             String
  email             String
  bankCode          String
  bankBranchCode    String
  bankAccountNumber String
  status            String
  stockValue        Float
  withholdingTax    Float
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  invoices          Invoice[]
}

model Invoice {
  id          String       @id
  date        DateTime
  dueDate     DateTime
  cost        Float
  currency    String
  status      String
  supplierId  String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  supplier    Supplier  @relation(fields: [supplierId], references: [id])
}

view VwInvoice {
  month       Int
  year        Int
  cost        Float
  status      String
  supplierId  String
  currency    String
  dueDate        DateTime

  @@map("VwInvoice")
}